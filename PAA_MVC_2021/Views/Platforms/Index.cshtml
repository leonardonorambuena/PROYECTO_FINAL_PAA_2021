@model List<PAA_MVC_2021.Models.Entities.ProductPlatform>


<div class="card mt-5">
    <div class="card-header"><h3>Listado de plataformas registradas</h3></div>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Nombre</th>
                <th>Logo</th>
                <th>Cantidad de juegos</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductPlatformName</td>
                    <td>
                        <img src="@item.ProductPlatformLogo" alt="@item.ProductPlatformName" width="200" height="100" />
                    </td>
                    <td>0</td>
                </tr>
            }
        </table>
    </div>
</div>
