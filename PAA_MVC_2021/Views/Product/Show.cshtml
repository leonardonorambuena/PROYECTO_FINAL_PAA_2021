@model PAA_MVC_2021.Models.Entities.Product
@{
    ViewBag.Title = $"Producto {Model.ProductCode} - {Model.ProductName}";
}

<div class="card mt-5">
    <div class="card-header"><h3>@ViewBag.Title</h3></div>
    <div class="card-body">
        <form action="/product/Update" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <div class="form-group">
                <label>Código</label>
                <input type="text" class="form-control" name="ProductCode" value="@Model.ProductCode" />
                @Html.ValidationMessageFor(x => x.ProductCode, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Descripción</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" />
                @Html.ValidationMessageFor(x => x.ProductName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input type="text" class="form-control" name="ProductPrice" value="@Model.ProductPrice" />
                @Html.ValidationMessageFor(x => x.ProductPrice, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Stock</label>
                <input type="text" class="form-control" name="ProducStock" value="@Model.ProducStock" />
                @Html.ValidationMessageFor(x => x.ProducStock, null, new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-success btn-block">Actualizar</button>
            <a href="/product" class="btn btn-secondary btn-block">Volver</a>
        </form>
    </div>
</div>